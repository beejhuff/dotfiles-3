#!/usr/bin/env bash

# a trick to prevent accidently "godep restore" commands, 
# allowing us to keep a prestine GOPATH and tools such as
# gostatus, gofresh and so on.

if [ "$1" == "restore" ]; then
    echo "WARNING: godep restore <- this will frack with your \$GOPATH !!"
    echo "WARNING: to override, use your installed version of godep like this:"
    echo "WARNING:      \$GOPATH/bin/godep restore"
    echo "WARNING: Aborting ..."
    exit 99
fi

$GOPATH/bin/godep "$@"

